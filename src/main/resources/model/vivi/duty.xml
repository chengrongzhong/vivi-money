<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://dbfound.googlecode.com/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://dbfound.googlecode.com/model http://dbfound.googlecode.com/svn/tags/v2/model.xsd">
    <query pagerSize="20">
        <sql>
            <![CDATA[
                select * 
                from v_duty
                #WHERE_CLAUSE#
                order by id desc 
            ]]>
        </sql>
        <filter name="duty_name" express="duty_name like concat('%',${@duty_name},'%')"/>
        <filter name="id" express="id = ${@id}"/>
    </query>

    <query name="queryD">
        <sql>
            <![CDATA[
                select *
                from v_duty
                #WHERE_CLAUSE#
                order by id asc
            ]]>
        </sql>
        <filter name="id" express="id = ${@id}"/>
    </query>

    <query name="queryAllDuty">
        <sql>
            <![CDATA[
                SELECT
                id as code, duty_name as name
                FROM v_duty ORDER BY id
             ]]>
        </sql>
    </query>

    <execute name="add">
        <param name="id" dataType="number"/>
        <param name="duty_name" dataType="varchar"/>
        <param name="base_money" dataType="number"/>
        <param name="other_money" dataType="number"/>
        <param name="position_money" dataType="number"/>
        <sqls>
            <executeSql>
                <![CDATA[
                INSERT INTO v_duty
                (
                duty_name,
                base_money,
                other_money,
                position_money
                )
                VALUES
                (
                ${@duty_name},
                ${@base_money},
                ${@other_money},
                ${@position_money}
                )
            ]]>
            </executeSql>
        </sqls>
    </execute>

    <execute name="update">
        <param name="id" dataType="number"/>
        <param name="duty_name" dataType="varchar"/>
        <param name="base_money" dataType="number"/>
        <param name="other_money" dataType="number"/>
        <param name="position_money" dataType="number"/>
        <sqls>
            <executeSql>
                <![CDATA[
                UPDATE v_duty SET
                duty_name=${@duty_name},
                base_money=${@base_money},
                other_money=${@other_money},
                position_money=${@position_money}
                WHERE id = ${@id}
            ]]>
            </executeSql>
        </sqls>
    </execute>

    <execute name="delete">
        <param name="id" dataType="number"/>
        <sqls>
            <executeSql>
                <![CDATA[
                DELETE FROM v_duty where id = ${@id}
            ]]>
            </executeSql>
        </sqls>
    </execute>
</model>