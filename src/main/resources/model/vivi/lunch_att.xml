<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://dbfound.googlecode.com/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://dbfound.googlecode.com/model http://dbfound.googlecode.com/svn/tags/v2/model.xsd">
    <query pagerSize="20">
        <sql>
            <![CDATA[
                select * 
                from v_lunch_attendance
                #WHERE_CLAUSE#
                order by id desc
            ]]>
        </sql>
        <filter name="class_id" express="class_id = ${@class_id}"/>
        <filter name="id" express="id = ${@id}"/>
    </query>

    <query name="monthAtt">
        <sql>
            <![CDATA[
                select *
                from v_lunch_attendance
                #WHERE_CLAUSE#
                order by id desc
            ]]>
        </sql>
        <filter name="opetime" express="opetime like ${@opetime}"/>
    </query>

    <execute name="add">
        <param name="id" dataType="number"/>
        <param name="class_id" dataType="number"/>
        <param name="count" dataType="number"/>
        <param name="student" dataType="number"/>
        <param name="opetime" dataType="varchar"/>
        <sqls>
            <executeSql>
                <![CDATA[
                INSERT INTO v_lunch_attendance
                (
                class_id,
                count,
                student,
                opetime,
                createtime,
                updatetime
                )
                VALUES
                (
                ${@class_id},
                ${@count},
                ${@student},
                ${@opetime},
                NOW(),
                NOW()
                )
            ]]>
            </executeSql>
        </sqls>
    </execute>

    <execute name="update">
        <param name="id" dataType="number"/>
        <param name="class_id" dataType="number"/>
        <param name="count" dataType="number"/>
        <param name="student" dataType="number"/>
        <param name="opetime" dataType="varchar"/>
        <sqls>
            <executeSql>
                <![CDATA[
                UPDATE v_lunch_attendance SET
                class_id=${@class_id},
                count=${@count},
                student=${@student},
                updatetime=NOW()
                WHERE id = ${@id}
            ]]>
            </executeSql>
        </sqls>
    </execute>

    <execute name="delete">
        <param name="id" dataType="number"/>
        <sqls>
            <executeSql>
                <![CDATA[
                DELETE FROM v_lunch_attendance where id = ${@id}
            ]]>
            </executeSql>
        </sqls>
    </execute>
</model>